@model Pelicula
@{
    ViewData["Title"] = "Sugerir Película";
}

<div class="container mt-4">
    <h2>Sugerir Nueva Película</h2>
    <form method="post">
        <div class="form-group">
            <label>Título</label>
            <input asp-for="Titulo" class="form-control" />
        </div>
        <div class="form-group">
            <label>Director</label>
            <input asp-for="Director" class="form-control" />
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <input asp-for="Categoria" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success mt-2">Enviar Sugerencia</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-warning mt-3">@ViewBag.Mensaje</div>
    }
</div>
